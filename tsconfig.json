{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": [
      "node",
      "jest",
      "google.maps",
      "applepayjs",
      "googlepay"
    ],
    "paths": {
      "src/*": ["src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
